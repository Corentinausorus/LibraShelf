{% extends 'base.html.twig' %}

{% block title %}{{ isEdit ? 'Modifier' : 'Créer' }} un ouvrage - Libraire{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h1 class="h4 mb-4">
                <i class="bi bi-book"></i> 
                {% if isEdit %}
                    Modifier l'ouvrage : {{ ouvrage.titre }}
                {% else %}
                    Créer un nouvel ouvrage
                {% endif %}
            </h1>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="card shadow-sm">
                <div class="card-body">
                    {{ form_start(form) }}
                        
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                {{ form_row(form.titre) }}
                            </div>
                            <div class="col-md-4 mb-3">
                                {{ form_row(form.ISBN) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <i class="bi bi-people"></i> Auteurs
                                </div>
                                <div class="card-body">
                                    {{ form_row(form.auteurs) }}
                                    <div class="alert alert-info mt-2 mb-0">
                                        <small>
                                            <i class="bi bi-info-circle"></i>
                                            Maintenez <kbd>Ctrl</kbd> (ou <kbd>Cmd</kbd> sur Mac) enfoncé pour sélectionner plusieurs auteurs.
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.editeur) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.annee) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <i class="bi bi-bookmark"></i> Catégories
                                    </div>
                                    <div class="card-body">
                                        {{ form_row(form.categories) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <i class="bi bi-tag"></i> Tags
                                    </div>
                                    <div class="card-body">
                                        {{ form_row(form.tags) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.Langues) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.Resume) }}
                        </div>

                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <a href="{{ path('librarian_ouvrages') }}" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> {{ isEdit ? 'Enregistrer les modifications' : 'Créer l\'ouvrage' }}
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {% if isEdit and ouvrage.createdBy %}
                <div class="mt-3">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i>
                        Créé par : {{ ouvrage.createdBy.email }}
                    </small>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
    .form-select[multiple] {
        min-height: 150px;
    }
    
    kbd {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 3px;
        padding: 2px 6px;
        font-size: 0.875em;
    }
</style>
{% endblock %}
