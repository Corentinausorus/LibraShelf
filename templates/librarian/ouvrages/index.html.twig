{% extends 'base.html.twig' %}

{% block title %}Gestion des Ouvrages - Libraire{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h4"><i class="bi bi-book"></i> Gestion des Ouvrages</h1>
        <a href="{{ path('librarian_ouvrage_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvel ouvrage
        </a>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% if ouvrages is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun ouvrage dans le catalogue.
        </div>
    {% else %}
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Titre</th>
                                <th>Auteur(s)</th>
                                <th>ISBN</th>
                                <th>Éditeur</th>
                                <th>Année</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ouvrage in ouvrages %}
                                <tr>
                                    <td>{{ ouvrage.id }}</td>
                                    <td>
                                        <strong>{{ ouvrage.titre }}</strong>
                                        {% if ouvrage.categories|length > 0 %}
                                            <br>
                                            <small class="text-muted">
                                                {% for categorie in ouvrage.categories %}
                                                    <span class="badge bg-secondary">{{ categorie.nom }}</span>
                                                {% endfor %}
                                            </small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if ouvrage.auteurs|length > 0 %}
                                            {% for auteur in ouvrage.auteurs %}
                                                {{ auteur.Nom }}{% if not loop.last %}, {% endif %}
                                            {% endfor %}
                                        {% else %}
                                            <span class="text-muted">Non renseigné</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ ouvrage.ISBN }}</td>
                                    <td>{{ ouvrage.editeur ? ouvrage.editeur.nom : '-' }}</td>
                                    <td>
                                        {% if ouvrage.Année %}
                                            {{ ouvrage.Année|date('Y') }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('librarian_ouvrage_edit', {id: ouvrage.id}) }}" 
                                               class="btn btn-outline-primary" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-outline-danger" 
                                                    title="Supprimer"
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteModal{{ ouvrage.id }}">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                {# Modal de confirmation de suppression #}
                                <div class="modal fade" id="deleteModal{{ ouvrage.id }}" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Confirmer la suppression</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                Êtes-vous sûr de vouloir supprimer l'ouvrage <strong>{{ ouvrage.titre }}</strong> ?
                                                Cette action est irréversible.
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                <form method="post" action="{{ path('librarian_ouvrage_delete', {id: ouvrage.id}) }}" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ouvrage.id) }}">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash"></i> Supprimer
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3 text-muted">
            <small>Total : {{ ouvrages|length }} ouvrage(s)</small>
        </div>
    {% endif %}

    <div class="mt-3">
        <a href="{{ path('librarian_dashboard') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour au tableau de bord
        </a>
    </div>
</div>
{% endblock %}
