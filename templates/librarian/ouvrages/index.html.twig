{% extends 'base.html.twig' %}

{% block title %}Gestion des Ouvrages - LibraShelf{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="page-header mb-5">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-6 fw-bold mb-2" style="color: #10b981;">
                    <i class="bi bi-book-fill"></i> Gestion des Ouvrages
                </h1>
                <p class="text-muted mb-0">Gérez le catalogue de la bibliothèque</p>
            </div>
            <a href="{{ path('librarian_ouvrage_new') }}" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Nouvel ouvrage
            </a>
        </div>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                <i class="bi bi-info-circle"></i> {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% if ouvrages is empty %}
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                <h3 class="mt-4 mb-2" style="color: #10b981;">Aucun ouvrage dans le catalogue</h3>
                <p class="text-muted mb-4">Commencez par ajouter votre premier livre.</p>
                <a href="{{ path('librarian_ouvrage_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Ajouter un ouvrage
                </a>
            </div>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white;">
                            <tr>
                                <th class="ps-4">ID</th>
                                <th>Titre</th>
                                <th>Auteur(s)</th>
                                <th>ISBN</th>
                                <th>Éditeur</th>
                                <th>Année</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ouvrage in ouvrages %}
                                <tr>
                                    <td class="ps-4">{{ ouvrage.id }}</td>
                                    <td>
                                        <strong>{{ ouvrage.titre }}</strong>
                                        {% if ouvrage.categories|length > 0 %}
                                            <br>
                                            <small>
                                                {% for categorie in ouvrage.categories %}
                                                    <span class="badge bg-secondary">{{ categorie.nom }}</span>
                                                {% endfor %}
                                            </small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if ouvrage.auteurs|length > 0 %}
                                            {% for auteur in ouvrage.auteurs %}
                                                {{ auteur.Nom }}{% if not loop.last %}, {% endif %}
                                            {% endfor %}
                                        {% else %}
                                            <span class="text-muted">Non renseigné</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ ouvrage.ISBN }}</td>
                                    <td>{{ ouvrage.editeur ? ouvrage.editeur.nom : '-' }}</td>
                                    <td>
                                        {% if ouvrage.Année %}
                                            {{ ouvrage.Année|date('Y') }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('librarian_ouvrage_exemplaires', {id: ouvrage.id}) }}" 
                                               class="btn btn-success" title="Gérer les exemplaires">
                                                <i class="bi bi-collection"></i>
                                            </a>
                                            <a href="{{ path('librarian_ouvrage_edit', {id: ouvrage.id}) }}" 
                                               class="btn btn-primary" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-danger" 
                                                    title="Supprimer"
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteModal{{ ouvrage.id }}">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                {# Modal de confirmation de suppression #}
                                <div class="modal fade" id="deleteModal{{ ouvrage.id }}" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Confirmer la suppression</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                Êtes-vous sûr de vouloir supprimer l'ouvrage <strong>{{ ouvrage.titre }}</strong> ?
                                                Cette action est irréversible.
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                <form method="post" action="{{ path('librarian_ouvrage_delete', {id: ouvrage.id}) }}" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ouvrage.id) }}">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash"></i> Supprimer
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <small class="text-muted"><i class="bi bi-info-circle"></i> Total : {{ ouvrages|length }} ouvrage(s)</small>
        </div>
    {% endif %}

    <div class="mt-4 text-center">
        <a href="{{ path('librarian_dashboard') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour au tableau de bord
        </a>
    </div>
</div>
{% endblock %}
