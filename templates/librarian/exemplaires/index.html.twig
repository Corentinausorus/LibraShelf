{% extends 'base.html.twig' %}

{% block title %}
    {% if ouvrage %}
        Exemplaires de "{{ ouvrage.titre }}" - Libraire
    {% else %}
        Gestion des Exemplaires - Libraire
    {% endif %}
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h4">
                <i class="bi bi-collection"></i>
                {% if ouvrage %}
                    Exemplaires de "{{ ouvrage.titre }}"
                {% else %}
                    Gestion des Exemplaires
                {% endif %}
            </h1>
            {% if ouvrage %}
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="{{ path('librarian_ouvrages') }}">Ouvrages</a></li>
                        <li class="breadcrumb-item active">{{ ouvrage.titre }}</li>
                    </ol>
                </nav>
            {% endif %}
        </div>
        <a href="{{ path('librarian_exemplaire_new', ouvrage ? {ouvrageId: ouvrage.id} : {}) }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvel exemplaire
        </a>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% if exemplaires is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun exemplaire trouvé.
            {% if ouvrage %}
                <a href="{{ path('librarian_exemplaire_new', {ouvrageId: ouvrage.id}) }}">Ajouter le premier exemplaire</a>.
            {% endif %}
        </div>
    {% else %}
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Cote</th>
                                {% if not ouvrage %}
                                    <th>Ouvrage</th>
                                {% endif %}
                                <th>État</th>
                                <th>Disponibilité</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for exemplaire in exemplaires %}
                                <tr>
                                    <td>{{ exemplaire.id }}</td>
                                    <td><code>{{ exemplaire.cote }}</code></td>
                                    {% if not ouvrage %}
                                        <td>
                                            {% if exemplaire.ouvrage %}
                                                <a href="{{ path('librarian_ouvrage_exemplaires', {id: exemplaire.ouvrage.id}) }}">
                                                    {{ exemplaire.ouvrage.titre }}
                                                </a>
                                            {% else %}
                                                <span class="text-muted">Non assigné</span>
                                            {% endif %}
                                        </td>
                                    {% endif %}
                                    <td>
                                        {% set etatClass = {
                                            'Neuf': 'success',
                                            'Très bon': 'success',
                                            'Bon': 'primary',
                                            'Acceptable': 'warning',
                                            'Usé': 'secondary',
                                            'Endommagé': 'danger'
                                        } %}
                                        <span class="badge bg-{{ etatClass[exemplaire.etat] ?? 'secondary' }}">
                                            {{ exemplaire.etat }}
                                        </span>
                                    </td>
                                    <td>
                                        {% if exemplaire.disponible %}
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Disponible
                                            </span>
                                        {% else %}
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-clock"></i> Indisponible
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('librarian_exemplaire_edit', {id: exemplaire.id}) }}" 
                                               class="btn btn-outline-primary" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-outline-danger" 
                                                    title="Supprimer"
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteModal{{ exemplaire.id }}">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                {# Modal de confirmation de suppression #}
                                <div class="modal fade" id="deleteModal{{ exemplaire.id }}" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Confirmer la suppression</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                Êtes-vous sûr de vouloir supprimer l'exemplaire <strong>{{ exemplaire.cote }}</strong> ?
                                                Cette action est irréversible.
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                <form method="post" action="{{ path('librarian_exemplaire_delete', {id: exemplaire.id}) }}" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ exemplaire.id) }}">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash"></i> Supprimer
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3 text-muted">
            <small>Total : {{ exemplaires|length }} exemplaire(s)</small>
        </div>
    {% endif %}

    <div class="mt-3">
        {% if ouvrage %}
            <a href="{{ path('librarian_ouvrages') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour aux ouvrages
            </a>
        {% else %}
            <a href="{{ path('librarian_dashboard') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour au tableau de bord
            </a>
        {% endif %}
    </div>
</div>
{% endblock %}
