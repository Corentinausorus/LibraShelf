{# templates/librarian/dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Espace bibliothécaire - LibraShelf{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold mb-3" style="color: #10b981;">
            <i class="bi bi-speedometer2"></i> Espace Bibliothécaire
        </h1>
        <p class="lead text-muted">Tableau de bord de gestion</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-book-fill" style="font-size: 3rem; color: #10b981;"></i>
                    <h5 class="mt-3 mb-3 fw-bold">Ouvrages</h5>
                    <p class="text-muted small mb-3">Gérez le catalogue</p>
                    <a href="{{ path('librarian_ouvrages') }}" class="btn btn-primary btn-sm w-100">
                        <i class="bi bi-arrow-right-circle"></i> Accéder
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-collection-fill" style="font-size: 3rem; color: #10b981;"></i>
                    <h5 class="mt-3 mb-3 fw-bold">Catalogue</h5>
                    <p class="text-muted small mb-3">Parcourir les livres</p>
                    <a href="{{ path('ouvrage_liste') }}" class="btn btn-primary btn-sm w-100">
                        <i class="bi bi-arrow-right-circle"></i> Accéder
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-arrow-left-right" style="font-size: 3rem; color: #10b981;"></i>
                    <h5 class="mt-3 mb-3 fw-bold">Emprunts</h5>
                    <p class="text-muted small mb-3">Gérer les prêts</p>
                    <a href="{{ path('librarian_loans') }}" class="btn btn-primary btn-sm w-100">
                        <i class="bi bi-arrow-right-circle"></i> Accéder
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-people-fill" style="font-size: 3rem; color: #10b981;"></i>
                    <h5 class="mt-3 mb-3 fw-bold">Membres</h5>
                    <p class="text-muted small mb-3">Voir les utilisateurs</p>
                    <a href="{{ path('librarian_members') }}" class="btn btn-primary btn-sm w-100">
                        <i class="bi bi-arrow-right-circle"></i> Accéder
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}