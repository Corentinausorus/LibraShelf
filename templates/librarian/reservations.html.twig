{% extends 'base.html.twig' %}

{% block title %}Gestion des réservations - LibraShelf{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-bookmark-check"></i> Gestion des réservations</h1>
        <a href="{{ path('librarian_dashboard') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour au tableau de bord
        </a>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Liste des réservations</h5>
        </div>
        <div class="card-body">
            {% if reservations is empty %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Aucune réservation en cours.
                </div>
            {% else %}
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Membre</th>
                            <th>Ouvrage</th>
                            <th>Date de réservation</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reservation in reservations %}
                            <tr>
                                <td>{{ reservation.id }}</td>
                                <td>{{ reservation.user ? reservation.user.email : '-' }}</td>
                                <td>
                                    {% if reservation.ouvrage %}
                                        {{ reservation.ouvrage.titre }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td>{{ reservation.creationDate ? reservation.creationDate|date('d/m/Y H:i') : '-' }}</td>
                                <td>
                                    {% if reservation.statut %}
                                        <span class="badge bg-info">{{ reservation.statut }}</span>
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="#" class="btn btn-outline-info" title="Voir">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
