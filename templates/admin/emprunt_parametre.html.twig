{% extends 'base.html.twig' %}
{% block title %}Paramètres de prêt{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="h4 mb-3"><i class="bi bi-gear"></i> Paramètres de prêt</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="mb-3">{{ form_row(form.empruntDureeJours) }}</div>
                <div class="mb-3">{{ form_row(form.joursTolerance) }}</div>
                <div class="mb-3">
                    {{ form_label(form.penaliteCentimesParJour) }}
                    <div class="input-group">
                        {{ form_widget(form.penaliteCentimesParJour, {'attr': {'min': 0}}) }}
                        <span class="input-group-text">centimes</span>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary me-2">Annuler</a>
                    <button class="btn btn-primary"><i class="bi bi-save"></i> Enregistrer</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}