{% extends 'base.html.twig' %}

{% block title %}Modifier rôle — {{ user.nom }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 fw-bold mb-2" style="color: #10b981;">
                            <i class="bi bi-pencil-square"></i> Modifier le rôle
                        </h1>
                        <p class="text-muted mb-0">Utilisateur : <strong>{{ user.nom }}</strong></p>
                    </div>
                    <a href="{{ path('admin_users') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                </div>
            </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'danger' ? 'danger' : (label == 'warning' ? 'warning' : (label == 'success' ? 'success' : 'info')) }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card">
        <div class="card-header">
            <h2 class="h5 mb-0"><i class="bi bi-shield-check"></i> Attribution du rôle</h2>
        </div>
        <div class="card-body p-4">
            <form method="post" onsubmit="return confirm('Confirmez-vous la modification du rôle de {{ user.nom }} ?');">
                {{ form_start(form) }}
                    <div class="mb-4">
                        {{ form_row(form.role) }}
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <a href="{{ path('admin_users') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Enregistrer les modifications
                        </button>
                    </div>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
        </div>
    </div>
</div>
{% endblock %}