{% extends 'base.html.twig' %}

{% block title %}Modifier rôle — {{ user.nom }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4"><i class="bi bi-pencil-square"></i> Modifier le rôle de {{ user.nom }}</h1>
        <div>
            <a href="{{ path('admin_users') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'danger' ? 'danger' : (label == 'warning' ? 'warning' : (label == 'success' ? 'success' : 'info')) }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" onsubmit="return confirm('Confirmez-vous la modification du rôle de {{ user.nom }} ?');">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_row(form.role) }}
                    </div>
                    <div class="d-flex justify-content-end">
                        <a href="{{ path('admin_users') }}" class="btn btn-secondary me-2">Annuler</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Enregistrer
                        </button>
                    </div>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}