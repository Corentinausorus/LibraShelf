{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mb-4">
                <div class="mb-3">
                    <i class="bi bi-person-circle" style="font-size: 5rem; color: #10b981;"></i>
                </div>
                <h1 class="h2 fw-bold" style="color: #10b981;">Mon Profil</h1>
                <p class="text-muted">Informations de votre compte</p>
            </div>

            <div class="card">
                <div class="card-header">
                    <h2 class="h5 mb-0"><i class="bi bi-person-badge"></i> Informations personnelles</h2>
                </div>

                <div class="card-body p-4">
                    <div class="mb-4">
                        <label class="form-label fw-bold" style="color: #10b981;">
                            <i class="bi bi-person"></i> Nom complet
                        </label>
                        <div class="form-control-plaintext bg-light rounded p-3">
                            {{ user.nom }}
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold" style="color: #10b981;">
                            <i class="bi bi-envelope"></i> Adresse email
                        </label>
                        <div class="form-control-plaintext bg-light rounded p-3">
                            {{ user.email }}
                        </div>
                    </div>

                    <div class="mb-0">
                        <label class="form-label fw-bold" style="color: #10b981;">
                            <i class="bi bi-shield-check"></i> Rôle
                        </label>
                        <div>
                            {% set role = user.getRole() %}
                            {% if role == 'ROLE_ADMIN' %}
                                <span class="badge bg-danger" style="font-size: 1rem; padding: 0.5rem 1rem;">
                                    <i class="bi bi-shield-lock"></i> Administrateur
                                </span>
                            {% elseif role == 'ROLE_LIBRARIAN' %}
                                <span class="badge bg-primary" style="font-size: 1rem; padding: 0.5rem 1rem;">
                                    <i class="bi bi-book-half"></i> Bibliothécaire
                                </span>
                            {% else %}
                                <span class="badge bg-secondary" style="font-size: 1rem; padding: 0.5rem 1rem;">
                                    <i class="bi bi-person"></i> Membre
                                </span>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="card-footer text-center p-4 bg-light">
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">
                        <i class="bi bi-box-arrow-right"></i> Se déconnecter
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
