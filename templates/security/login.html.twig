{% extends 'base.html.twig' %}

{% block title %}Connexion - LibraShelf{% endblock %}

{% block body %}
<div class="welcome-container">
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-5">
                <div class="text-center mb-4">
                    <h1 class="display-5" style="color: white; font-weight: 700;">
                        <i class="bi bi-book-fill"></i> LibraShelf
                    </h1>
                    <p class="lead" style="color: rgba(255, 255, 255, 0.9);">
                        Connectez-vous à votre espace personnel
                    </p>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2><i class="bi bi-box-arrow-in-right"></i> Connexion</h2>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="bi bi-exclamation-triangle-fill"></i> 
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            {% endif %}

                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                        {% if label == 'success' %}
                                            <i class="bi bi-check-circle-fill"></i>
                                        {% elseif label == 'danger' or label == 'error' %}
                                            <i class="bi bi-exclamation-triangle-fill"></i>
                                        {% else %}
                                            <i class="bi bi-info-circle-fill"></i>
                                        {% endif %}
                                        {{ message }}
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                {% endfor %}
                            {% endfor %}

                            <div class="mb-4">
                                <label for="inputEmail" class="form-label">
                                    <i class="bi bi-envelope"></i> Adresse email
                                </label>
                                <input type="email" 
                                       value="{{ last_username }}" 
                                       name="email" 
                                       id="inputEmail" 
                                       class="form-control" 
                                       placeholder="votre@email.com"
                                       autocomplete="email" 
                                       required 
                                       autofocus>
                            </div>

                            <div class="mb-4">
                                <label for="inputPassword" class="form-label">
                                    <i class="bi bi-lock"></i> Mot de passe
                                </label>
                                <input type="password" 
                                       name="password" 
                                       id="inputPassword" 
                                       class="form-control"
                                       placeholder="••••••••" 
                                       autocomplete="current-password" 
                                       required>
                            </div>

                            <input type="hidden" 
                                   name="_csrf_token" 
                                   data-controller="csrf-protection" 
                                   value="{{ csrf_token('authenticate') }}">

                            <div class="form-check mb-4">
                                <input type="checkbox" 
                                       class="form-check-input" 
                                       name="_remember_me" 
                                       id="rememberMe">
                                <label class="form-check-label" for="rememberMe">
                                    Se souvenir de moi
                                </label>
                            </div>

                            <div class="d-grid gap-2">
                                <button class="btn btn-primary btn-lg" type="submit">
                                    <i class="bi bi-box-arrow-in-right"></i> Se connecter
                                </button>
                            </div>
                        </form>

                        <div class="text-center mt-4 pt-3 border-top">
                            <p class="mb-0" style="color: #666;">
                                Pas encore de compte ? 
                                <a href="{{ path('app_register') }}" style="font-weight: 600;">
                                    <i class="bi bi-person-plus"></i> Créer un compte
                                </a>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <p style="color: rgba(255, 255, 255, 0.8); font-size: 0.9rem;">
                        <i class="bi bi-shield-lock"></i> Connexion sécurisée
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
