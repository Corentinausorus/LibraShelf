{% extends 'base.html.twig' %}

{% block title %}Mes Réservations{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="mb-5 text-center">
        <h1 class="display-5 fw-bold mb-3" style="color: #10b981;">
            <i class="bi bi-bookmark-star-fill"></i> Mes Réservations
        </h1>
        <p class="lead text-muted">Gérez vos réservations en attente</p>
    </div>

    {# Gestion des messages flash (succès/info) #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                <i class="bi bi-{% if label == 'success' %}check-circle{% else %}info-circle{% endif %}-fill"></i>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% if reservations is empty %}
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-bookmark" style="font-size: 4rem; color: #ccc;"></i>
                <h3 class="mt-4 mb-2" style="color: #10b981;">Aucune réservation</h3>
                <p class="text-muted mb-4">Vous n'avez aucune réservation en cours pour le moment.</p>
                <a href="{{ path('member_ouvrages') }}" class="btn btn-primary">
                    <i class="bi bi-search"></i> Parcourir le catalogue
                </a>
            </div>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white;">
                            <tr>
                                <th scope="col" class="ps-4">Livre</th>
                                <th scope="col">Date de demande</th>
                                <th scope="col">État</th>
                                <th scope="col">Détails</th>
                                <th scope="col" class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reservation in reservations %}
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold">{{ reservation.ouvrage.titre }}</div>
                                        <small class="text-muted">
                                            {% for auteur in reservation.ouvrage.auteurs %}
                                               {#} {{ auteur.nom }} {{ auteur.prenom }}{% if not loop.last %}, {% endif %}#}
                                            {% endfor %}
                                        </small>
                                    </td>
                                    <td>
                                        {{ reservation.creationDate|date('d/m/Y') }}
                                        <br>
                                        <small class="text-muted">{{ reservation.creationDate|date('H:i') }}</small>
                                    </td>
                                    <td>
                                        {% if reservation.statut == 'À récupérer' %}
                                            <span class="badge bg-success rounded-pill">
                                                <i class="bi bi-check-circle me-1"></i> Prêt à récupérer
                                            </span>
                                        {% elseif reservation.statut == 'En attente' %}
                                            <span class="badge bg-warning text-dark rounded-pill">
                                                <i class="bi bi-hourglass-split me-1"></i> File d'attente
                                            </span>
                                        {% else %}
                                            <span class="badge bg-secondary rounded-pill">{{ reservation.statut }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if reservation.exemplaire %}
                                            {# Cas où un exemplaire est attribué #}
                                            <div class="d-flex flex-column">
                                                <span class="text-success fw-bold">Disponible</span>
                                                <small>Cote : <span class="badge bg-light text-dark border">{{ reservation.exemplaire.cote }}</span></small>
                                            </div>
                                        {% else %}
                                            {# Cas file d'attente #}
                                            <span class="text-muted fst-italic">En attente de retour</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end pe-4">
                                        {# Bouton d'annulation (Logique à implémenter plus tard) #}
                                        <form method="post" action="{{ path('app_reservation_delete', {'id': reservation.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette réservation ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                            <button class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-x-circle"></i> Annuler
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
