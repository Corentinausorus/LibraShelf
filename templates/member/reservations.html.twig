{% extends 'base.html.twig' %}

{% block title %}Mes Réservations{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-bookmark-star"></i> Mes Réservations</h1>
        <a href="{{ path('member_ouvrages') }}" class="btn btn-primary">
            <i class="bi bi-search"></i> Parcourir le catalogue
        </a>
    </div>

    {# Gestion des messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% if reservations is empty %}
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-bookmark-x" style="font-size: 4rem; color: #6c757d;"></i>
                <h4 class="mt-3">Aucune réservation</h4>
                <p class="text-muted">Vous n'avez aucune réservation en cours pour le moment.</p>
                <a href="{{ path('member_ouvrages') }}" class="btn btn-primary mt-2">
                    <i class="bi bi-book"></i> Parcourir le catalogue
                </a>
            </div>
        </div>
    {% else %}
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col" class="ps-4">Ouvrage</th>
                                <th scope="col">Date de demande</th>
                                <th scope="col">Statut</th>
                                <th scope="col">Position file d'attente</th>
                                <th scope="col" class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reservation in reservations %}
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold">{{ reservation.ouvrage.titre }}</div>
                                        <small class="text-muted">
                                            {% if reservation.ouvrage.auteurs is not empty %}
                                                {% for auteur in reservation.ouvrage.auteurs %}
                                                    {{ auteur.nom }}{% if not loop.last %}, {% endif %}
                                                {% endfor %}
                                            {% endif %}
                                        </small>
                                    </td>
                                    <td>
                                        {{ reservation.creationDate|date('d/m/Y') }}
                                        <br>
                                        <small class="text-muted">{{ reservation.creationDate|date('H:i') }}</small>
                                    </td>
                                    <td>
                                        {# Affichage du statut avec badge approprié #}
                                        {% if reservation.statut == 'en_attente' %}
                                            <span class="badge bg-warning text-dark rounded-pill">
                                                <i class="bi bi-hourglass-split me-1"></i> En file d'attente
                                            </span>
                                        {% elseif reservation.statut == 'disponible' %}
                                            <span class="badge bg-success rounded-pill">
                                                <i class="bi bi-check-circle me-1"></i> Disponible
                                            </span>
                                        {% elseif reservation.statut == 'annulee' %}
                                            <span class="badge bg-secondary rounded-pill">
                                                <i class="bi bi-x-circle me-1"></i> Annulée
                                            </span>
                                        {% elseif reservation.statut == 'terminee' %}
                                            <span class="badge bg-info rounded-pill">
                                                <i class="bi bi-check2-all me-1"></i> Terminée
                                            </span>
                                        {% else %}
                                            <span class="badge bg-secondary rounded-pill">{{ reservation.statut }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {# Affichage de la position dans la file d'attente #}
                                        {% if reservation.statut == 'en_attente' and queuePositions[reservation.id] is defined %}
                                            {% set position = queuePositions[reservation.id] %}
                                            {% if position == 1 %}
                                                <span class="badge bg-success fs-6">
                                                    <i class="bi bi-trophy me-1"></i> 1er - Prochain !
                                                </span>
                                            {% elseif position == 2 %}
                                                <span class="badge bg-primary fs-6">
                                                    <i class="bi bi-2-circle me-1"></i> 2ème
                                                </span>
                                            {% elseif position == 3 %}
                                                <span class="badge bg-info fs-6">
                                                    <i class="bi bi-3-circle me-1"></i> 3ème
                                                </span>
                                            {% else %}
                                                <span class="badge bg-secondary fs-6">
                                                    <i class="bi bi-person-lines-fill me-1"></i> {{ position }}ème
                                                </span>
                                            {% endif %}
                                        {% elseif reservation.statut == 'disponible' %}
                                            <span class="text-success fw-bold">
                                                <i class="bi bi-hand-index-thumb"></i> À récupérer
                                            </span>
                                            {% if reservation.notifiedAt %}
                                                <br>
                                                <small class="text-muted">Notifié le {{ reservation.notifiedAt|date('d/m/Y') }}</small>
                                            {% endif %}
                                        {% else %}
                                            <span class="text-muted">—</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end pe-4">
                                        {# Bouton d'annulation pour les réservations actives #}
                                        {% if reservation.statut in ['en_attente', 'disponible'] %}
                                            <form method="post" action="{{ path('member_reservation_cancel', {'id': reservation.id}) }}" 
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette réservation ?');"
                                                  class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                                <button class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-x-circle"></i> Annuler
                                                </button>
                                            </form>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {# Légende des statuts #}
        <div class="card mt-4">
            <div class="card-body">
                <h6 class="card-title mb-3"><i class="bi bi-info-circle"></i> Légende</h6>
                <div class="row">
                    <div class="col-md-3">
                        <span class="badge bg-warning text-dark me-2">En file d'attente</span>
                        <small class="text-muted">Vous attendez qu'un exemplaire soit disponible</small>
                    </div>
                    <div class="col-md-3">
                        <span class="badge bg-success me-2">Disponible</span>
                        <small class="text-muted">L'ouvrage vous attend à la bibliothèque</small>
                    </div>
                    <div class="col-md-3">
                        <span class="badge bg-info me-2">Terminée</span>
                        <small class="text-muted">L'emprunt a été effectué</small>
                    </div>
                    <div class="col-md-3">
                        <span class="badge bg-secondary me-2">Annulée</span>
                        <small class="text-muted">Réservation annulée</small>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
