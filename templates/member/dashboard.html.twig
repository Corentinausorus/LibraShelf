{# templates/member/dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mon espace - LibraShelf{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold mb-3" style="color: #10b981;">
            <i class="bi bi-house-heart-fill"></i> Mon Espace Personnel
        </h1>
        <p class="lead text-muted">Bienvenue dans votre bibliothèque</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-search" style="font-size: 3rem; color: #10b981;"></i>
                    <h5 class="mt-3 mb-3 fw-bold">Catalogue</h5>
                    <p class="text-muted small mb-3">Rechercher des livres</p>
                    <a href="{{ path('member_ouvrages') }}" class="btn btn-primary btn-sm w-100">
                        <i class="bi bi-arrow-right-circle"></i> Parcourir
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-journal-bookmark-fill" style="font-size: 3rem; color: #10b981;"></i>
                    <h5 class="mt-3 mb-3 fw-bold">Mes Emprunts</h5>
                    <p class="text-muted small mb-3">Suivre mes prêts</p>
                    <a href="{{ path('member_loans') }}" class="btn btn-primary btn-sm w-100">
                        <i class="bi bi-arrow-right-circle"></i> Voir
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-bookmark-star-fill" style="font-size: 3rem; color: #10b981;"></i>
                    <h5 class="mt-3 mb-3 fw-bold">Réservations</h5>
                    <p class="text-muted small mb-3">Gérer mes réservations</p>
                    <a href="{{ path('member_reservations') }}" class="btn btn-primary btn-sm w-100">
                        <i class="bi bi-arrow-right-circle"></i> Accéder
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-person-circle" style="font-size: 3rem; color: #10b981;"></i>
                    <h5 class="mt-3 mb-3 fw-bold">Mon Profil</h5>
                    <p class="text-muted small mb-3">Mes informations</p>
                    <a href="{{ path('app_profile') }}" class="btn btn-primary btn-sm w-100">
                        <i class="bi bi-arrow-right-circle"></i> Voir
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}