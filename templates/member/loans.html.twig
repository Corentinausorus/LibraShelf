{% extends 'base.html.twig' %}

{% block title %}Mes emprunts{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="mb-5 text-center">
        <h1 class="display-5 fw-bold mb-3" style="color: #10b981;">
            <i class="bi bi-journal-bookmark-fill"></i> Mes emprunts
        </h1>
        <p class="lead text-muted">Suivez l'état de vos emprunts en cours</p>
    </div>

    {% set loans = loans|default([]) %}

    {% if loans is empty %}
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                <h3 class="mt-4 mb-2" style="color: #10b981;">Aucun emprunt en cours</h3>
                <p class="text-muted mb-4">Vous n'avez aucun emprunt actif pour le moment.</p>
                <a href="{{ path('member_ouvrages') }}" class="btn btn-primary">
                    <i class="bi bi-search"></i> Parcourir le catalogue
                </a>
            </div>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white;">
                            <tr>
                                <th class="ps-4">Ouvrage</th>
                                <th>Exemplaire / Cote</th>
                                <th>Emprunté le</th>
                                <th>Échéance</th>
                                <th>Statut</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                <tbody>
                {% for loan in loans %}
                    {# Déduire le titre de l'ouvrage (essayer plusieurs chemins courants) #}
                    {% set titre = (loan.exemplaire is defined and loan.exemplaire and loan.exemplaire.ouvrage) 
                        ? loan.exemplaire.ouvrage.titre 
                        : (loan.ouvrage is defined and loan.ouvrage ? loan.ouvrage.titre : '—') %}
                    {% set cote = (loan.exemplaire is defined and loan.exemplaire and loan.exemplaire.cote) ? loan.exemplaire.cote : (loan.cote|default('—')) %}

                    <tr>
                        <td class="ps-4 fw-bold">{{ titre }}</td>
                        <td><span class="badge bg-light text-dark border">{{ cote }}</span></td>

                        {# Dates : essayer plusieurs noms possibles #}
                        <td>
                            {% if loan.dateEmprunt is defined and loan.dateEmprunt %}
                                {{ loan.dateEmprunt|date('d/m/Y') }}
                            {% elseif loan.dateDebut is defined and loan.dateDebut %}
                                {{ loan.dateDebut|date('d/m/Y') }}
                            {% else %}
                                —
                            {% endif %}
                        </td>

                        <td>
                            {% if loan.dateEcheance is defined and loan.dateEcheance %}
                                {{ loan.dateEcheance|date('d/m/Y') }}
                            {% elseif loan.dateRetourPrevue is defined and loan.dateRetourPrevue %}
                                {{ loan.dateRetourPrevue|date('d/m/Y') }}
                            {% else %}
                                —
                            {% endif %}
                        </td>

                        <td>
                            {% set statut = loan.statut|default(loan.status|default('inconnu')) %}
                            {% if statut in ['overdue','retard','en_retard'] %}
                                <span class="badge bg-danger">En retard</span>
                            {% elseif statut in ['borrowed','emprunté','en_cours'] %}
                                <span class="badge bg-success">En cours</span>
                            {% elseif statut in ['returned','rendu'] %}
                                <span class="badge bg-secondary">Rendu</span>
                            {% else %}
                                <span class="badge bg-info">{{ statut }}</span>
                            {% endif %}
                        </td>

                        <td class="text-end pe-4">
                            {# Adaptez les routes ci-dessous selon vos routes réelles #}
                            {% if statut not in ['returned','rendu'] %}
                                <a href="{{ path('app_emprunt_return', {'id': loan.id}) }}" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-arrow-return-left"></i> Retourner
                                </a>
                                <a href="{{ path('app_emprunt_renew', {'id': loan.id}) }}" class="btn btn-sm btn-primary ms-2">
                                    <i class="bi bi-arrow-clockwise"></i> Renouveler
                                </a>
                            {% else %}
                                <span class="text-muted small">Aucune action</span>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}