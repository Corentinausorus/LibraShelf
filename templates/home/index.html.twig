{% extends 'base.html.twig' %}

{% block title %}Bienvenue - LibraShelf{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4">Bienvenue sur LibraShelf</h1>
            <p class="lead text-muted mb-5">
                Votre système de gestion de bibliothèque moderne et intuitif
            </p>

            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <h2 class="h4 mb-4">Commencez dès maintenant</h2>
                    
                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                        <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg px-4">
                            <i class="bi bi-box-arrow-in-right"></i> Se connecter
                        </a>
                        <br>
                        <a href="{{ path('app_register') }}" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-person-plus"></i> Créer un compte
                        </a>
                    </div>
                </div>
            </div>

            
        </div>
    </div>
</div>
{% endblock %}