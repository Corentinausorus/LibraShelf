<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}LibraShelf{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
</head>
<body>
    {# MENU DE NAVIGATION PRINCIPAL #}
    {# Visible sur TOUTES les pages de l'application #}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container-fluid px-4">
            {# Logo - Retour à l'accueil #}
            <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
                <i class="bi bi-book-fill me-2" style="font-size: 1.5rem;"></i>
                <span class="fw-bold">LibraShelf</span>
            </a>
            
            {# Bouton hamburger pour mobile #}
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                {# Menu principal - Adapté au rôle #}
                <ul class="navbar-nav me-auto">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_dashboard') }}">
                                <i class="bi bi-shield-check"></i> Administration
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_users') }}">
                                <i class="bi bi-people"></i> Utilisateurs
                            </a>
                        </li>
                    {% endif %}
                    
                    {% if is_granted('ROLE_LIBRARIAN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('librarian_dashboard') }}">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('librarian_catalog') }}">
                                <i class="bi bi-book-half"></i> Catalogue
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('librarian_loans') }}">
                                <i class="bi bi-arrow-left-right"></i> Emprunts
                            </a>
                        </li>
                    {% endif %}
                    
                    {% if is_granted('ROLE_MEMBER') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('member_ouvrages') }}">
                                <i class="bi bi-search"></i> Rechercher
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('member_loans') }}">
                                <i class="bi bi-journal-bookmark"></i> Mes emprunts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('member_reservations') }}">
                                <i class="bi bi-bookmark-star"></i> Mes réservations
                            </a>
                        </li>
                    {% endif %}
                </ul>
                
                {# Menu utilisateur (droite) #}
                <ul class="navbar-nav">
                    {% if app.user %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-2" style="font-size: 1.3rem;"></i> 
                                <span>{{ app.user.nom }}</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_profile') }}">
                                        <i class="bi bi-person"></i> Mon profil
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" href="{{ path('app_logout') }}">
                                        <i class="bi bi-box-arrow-right"></i> Se déconnecter
                                    </a>
                                </li>
                            </ul>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">
                                <i class="bi bi-box-arrow-in-right"></i> Se connecter
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">
                                <i class="bi bi-person-plus"></i> S'inscrire
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    {# CONTENU DES PAGES #}
    {% block body %}{% endblock %}
    
    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% endblock %}

    {% if app.user %}
    <footer class="bg-light text-center text-muted py-4 mt-5">
        <div class="container">
            <div class="mb-2">
                <i class="bi bi-person-circle"></i> 
                <strong>{{ app.user.userIdentifier }}</strong> 
                <span class="mx-2">•</span>
                {% set role = app.user.getRoles()|first %}
                {% if role == 'ROLE_ADMIN' %}
                    <span class="badge bg-danger">
                        <i class="bi bi-shield-lock"></i> Administrateur
                    </span>
                {% elseif role == 'ROLE_LIBRARIAN' %}
                    <span class="badge bg-primary">
                        <i class="bi bi-book-half"></i> Bibliothécaire
                    </span>
                {% else %}
                    <span class="badge bg-secondary">
                        <i class="bi bi-person"></i> Membre
                    </span>
                {% endif %}
            </div>
            <div class="small">
                <a href="{{ path('app_logout') }}" class="text-decoration-none">
                    <i class="bi bi-box-arrow-right"></i> Déconnexion
                </a>
            </div>
        </div>
    </footer>
    {% endif %}
</body>
</html>